# @(#)$Id: aliasprepare,v 1.1 1994/03/12 00:59:25 paul Exp $


if ($#ARGV<0)
  {print STDERR "Usage: aliasprepare prod.cnf [files]\n";exit 1;}

#
# read the config file
$config = shift;
open(CONFIG,"<$config") || die "$config: $!\n";
while (<CONFIG>)
{
  if (/:alias:/)
  {
    split(':');
    $anum = $_[0];
    last;
  }
}

#
# process
while (<>)
{
  if (/\t$anum:/o)
  {
    s/(.*)\t$anum:([^\t\n]*)/$anum:$2\t$1/;
  }
  else
  {
    $_ = "$anum:~~~~\t" . $_;
  }
  print $_;
}
